<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signup_bg_color" >
    <Button
        android:id="@+id/button_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sl_account_bottom_btn"
        android:paddingBottom="@dimen/login_marginMedium"
        android:paddingTop="@dimen/login_marginMedium"
        android:text="@string/action_cam_update_all"
        android:textColor="@color/word_white"
        android:textColorLink="@color/word_white"
        android:textSize="@dimen/login_fontMedium" />
	<RelativeLayout
        android:layout_alignParentTop="true"
       	android:layout_above="@+id/button_update"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <TextView 
		    android:id="@+id/txt_update_warning"
		    android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:textSize="@dimen/update_desc_font_size"
	  		android:textColor="@color/word_gray"
	  		android:text="@string/desc_cam_update_warning"
	  		android:layout_marginTop="@dimen/update_instruction_margin_top"
	  		android:layout_marginLeft="@dimen/update_margin_hor"
	  		android:layout_marginRight="@dimen/update_margin_hor"/>
	    <ImageView 
	        android:id="@+id/iv_ota_image"
	        android:layout_below="@+id/txt_update_warning"
		    android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	        android:src="@drawable/cam_ota_image_1_android"
	        android:layout_marginTop="@dimen/update_instruction_margin_top"
	        android:paddingBottom="@dimen/update_logo_margin_top"
	        android:layout_alignParentBottom="true"/>
    </RelativeLayout>    
</RelativeLayout>