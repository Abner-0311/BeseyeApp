<LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
        <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/setting_wifi_title_bg"
		    tools:context=".MainActivity" >
		    
		    <RelativeLayout 
		        android:layout_width="wrap_content"
		   		android:layout_height="@dimen/wifi_list_item_height" 
		   		android:layout_alignParentLeft="true"
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
		   		android:layout_centerVertical="true">
		        <TextView 
			    	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content" 
			   		android:textSize="@dimen/setting_list_item_main_title_font_size"
			   		android:textColor="@color/setting_title_font_color"
			   		android:text="@string/cam_setting_title_power_setting"
			   		android:paddingBottom="@dimen/cam_setting_item_margin_bottom"
			   		android:layout_alignParentBottom="true"/>
		    </RelativeLayout>   
		</RelativeLayout>
		
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/dsl_setting_item_bg"
		    tools:context=".MainActivity" >
		
		    <View 
		        android:layout_width="1dp"
		    	android:layout_height="@dimen/wifi_list_item_height"/>

		    <com.app.beseye.widget.BeseyeSwitchBtn 
			    android:id="@+id/sb_camera_switch"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding">
			</com.app.beseye.widget.BeseyeSwitchBtn>
		    
		    <RelativeLayout 
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_alignParentLeft="true"
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
		   		android:layout_centerVertical="true">
		        <TextView 
			       	android:id="@+id/txt_power_title"
			    	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content" 
			   		android:textSize="@dimen/wifi_list_item_main_font_size"
			   		android:textColor="@color/csl_wifi_list_main_font_color"
			   		android:text="@string/cam_setting_title_power"/>
		    </RelativeLayout>   
		</RelativeLayout>
		
		<RelativeLayout
		    android:id="@+id/vg_power_schedule" 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/dsl_setting_item_bg"
		    tools:context=".MainActivity" >
		
		    <View 
		        android:layout_width="1dp"
		    	android:layout_height="@dimen/wifi_list_item_height"/>

		    <ImageView
		        android:id="@+id/iv_power_schedule_inf"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
		        android:src="@drawable/sl_setting_inside_icon"
		        android:duplicateParentState="true"/>

		    <RelativeLayout 
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_alignParentLeft="true"
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
		   		android:layout_toLeftOf="@+id/iv_power_schedule_inf"
		   		android:layout_centerVertical="true">
		        <TextView
		            android:id="@+id/cam_shcedule_title"
			    	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content" 
			   		android:textSize="@dimen/wifi_list_item_main_font_size"
			   		android:textColor="@color/csl_wifi_list_main_font_color"
			   		android:text="@string/cam_setting_title_power_time"/>
		        <ImageView
		        	android:id="@+id/iv_cam_schedule_news"
			    	android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
					android:src="@drawable/setting_list_news_icon"
					android:layout_toRightOf="@+id/cam_shcedule_title"
					android:layout_centerVertical="true"
		        	android:layout_marginLeft="@dimen/cam_list_item_horizontal_padding"
					android:visibility="invisible"/>
		    </RelativeLayout>   
		</RelativeLayout>
		
		<RelativeLayout 
		    android:id="@+id/vg_location_aware"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/dsl_setting_item_bg"
		    tools:context=".MainActivity" >
		
		    <View 
		        android:layout_width="1dp"
		    	android:layout_height="@dimen/wifi_list_item_height"/>

		    <ImageView
		        android:id="@+id/iv_location_aware_inf"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
		        android:src="@drawable/sl_setting_inside_icon" />

		    <RelativeLayout 
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_alignParentLeft="true"
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
		   		android:layout_toLeftOf="@+id/iv_location_aware_inf"
		   		android:layout_centerVertical="true">
		        <TextView 
		            android:id="@+id/txt_loc_aware"
			    	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content" 
			   		android:textSize="@dimen/wifi_list_item_main_font_size"
			   		android:textColor="@color/csl_wifi_list_main_font_color"
			   		android:text="@string/cam_setting_title_location"/>
		    </RelativeLayout>   
		</RelativeLayout>
		
</LinearLayout>



   
		
	
 


