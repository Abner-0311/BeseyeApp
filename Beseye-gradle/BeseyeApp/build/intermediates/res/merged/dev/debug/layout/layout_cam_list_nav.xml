<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" 
    android:background="@color/signup_nav_bg_color">
    <ImageView
        android:id="@+id/iv_nav_menu_btn"
	    android:layout_width="wrap_content"
    	android:layout_height="match_parent"
		android:src="@drawable/sl_cam_list_menu"
    	android:layout_centerVertical="true"
    	android:paddingLeft="@dimen/cameralist_nav_margin_hori"
    	android:paddingRight="@dimen/cameralist_nav_margin_hori">
    </ImageView>
    
    <ImageView
        android:id="@+id/iv_nav_news"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:src="@drawable/account_inf_menu_news_icon"
		android:layout_alignParentBottom="true"
    	android:layout_marginLeft="30dp"
    	android:paddingBottom="24dp"
    	android:visibility="gone">
    </ImageView>
    	
  	<TextView 
  	    android:id="@+id/txt_nav_title"
  	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerInParent="true"
    	android:textColor="@color/word_white"
    	android:text="@string/cam_list_tilte"
    	android:singleLine="true"
    	android:gravity="center"
    	android:layout_toRightOf="@+id/iv_nav_menu_btn"
    	android:layout_toLeftOf="@+id/iv_nav_add_cam_btn"
    	android:textSize="@dimen/login_fontMedium"/>
  	
  	<ImageView
        android:id="@+id/iv_nav_add_cam_btn"
	    android:layout_width="wrap_content"
    	android:layout_height="match_parent"
		android:src="@drawable/sl_cam_list_add"
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:paddingLeft="@dimen/cameralist_nav_margin_hori"
    	android:paddingRight="@dimen/cameralist_nav_margin_hori">
    </ImageView>
	
</RelativeLayout>