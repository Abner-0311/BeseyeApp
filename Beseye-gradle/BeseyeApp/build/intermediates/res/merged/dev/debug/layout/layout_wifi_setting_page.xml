<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dsl_wifi_list_item_bg"
    tools:context=".MainActivity">
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
      	<RelativeLayout 
      	    android:id="@+id/vg_setting_power"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/wifi_list_item_height"
		    android:background="@drawable/dsl_wifi_list_item_bg"
		    tools:context=".MainActivity">
		    
            <com.app.beseye.widget.BeseyeSwitchBtn 
			    android:id="@+id/sb_camera_switch"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding">
			</com.app.beseye.widget.BeseyeSwitchBtn>
		  
		    <RelativeLayout 
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_alignParentLeft="true"
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
		   		android:layout_toLeftOf="@+id/sb_camera_switch"
		   		android:layout_centerVertical="true">
		        <TextView 
			       	android:id="@+id/txt_power_title"
			    	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content" 
			   		android:textSize="@dimen/wifi_list_item_main_font_size"
			   		android:textColor="@color/csl_wifi_list_main_font_color"
			   		android:text="@string/cam_setting_title_power"/>
				
				<TextView 
			       	android:id="@+id/txt_power_desc"
			    	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content" 
			   		android:textSize="@dimen/wifi_list_item_sub_font_size"
			   		android:textColor="@color/csl_wifi_list_sub_font_color"
			   		android:layout_below="@+id/txt_power_title"
			   		android:text="@string/cam_setting_title_power_desc"
			   		android:visibility="gone"/>
		    </RelativeLayout>
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/wifi_list_item_divider_color"/>
		<RelativeLayout 
      	    android:id="@+id/vg_video_upside_down"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/wifi_list_item_height"
		    android:background="@drawable/dsl_wifi_list_item_bg"
		    tools:context=".MainActivity">
		    
		    <ImageView 
		        android:id="@+id/iv_video_upside_down_check_bg"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:paddingLeft="10dp"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:src="@drawable/setting_check_box_default"
		    	android:layout_marginRight="@dimen/cam_setting_item_padding_right"/>
		    
		    <ImageView 
		        android:id="@+id/iv_video_upside_down_check"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:src="@drawable/sl_setting_check_box"
		    	android:layout_marginRight="@dimen/cam_setting_item_padding_right"/>
		    
		   <TextView 
		       	android:id="@+id/txt_video_upside_down_title"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding"
		   		android:layout_centerVertical="true"
		   		android:textSize="@dimen/wifi_list_item_main_font_size"
		   		android:textColor="@color/csl_wifi_list_main_font_color"
		   		android:text="@string/cam_setting_title_video_upside_down"/>
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/wifi_list_item_divider_color"
		    android:visibility="gone"/>
		<RelativeLayout 
      	    android:id="@+id/vg_wifi_setting"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/wifi_list_item_height"
		    android:background="@drawable/dsl_wifi_list_item_bg"
		    tools:context=".MainActivity"
		    android:visibility="gone">    
		    <ImageView 
		        android:id="@+id/iv_enter_arrow"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:src="@drawable/sl_setting_inside_icon"
		    	android:layout_marginRight="@dimen/cam_setting_item_padding_right"/>
		    
		   <TextView 
		       	android:id="@+id/txt_wifi_setting_title"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding"
		   		android:layout_centerVertical="true"
		   		android:textSize="@dimen/wifi_list_item_main_font_size"
		   		android:textColor="@color/csl_wifi_list_main_font_color"
		   		android:text="@string/cam_setting_title_wifi_setting"/>
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/wifi_list_item_divider_color"/>
		<RelativeLayout 
      	    android:id="@+id/vg_cam_info"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/wifi_list_item_height"
		    android:background="@drawable/dsl_wifi_list_item_bg"
		    tools:context=".MainActivity">    
		    <ImageView 
		        android:id="@+id/iv_enter_arrow_2"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:src="@drawable/sl_setting_inside_icon"
		    	android:layout_marginRight="@dimen/cam_setting_item_padding_right"/>
		    
		   <TextView 
		       	android:id="@+id/txt_cam_info_title"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding"
		   		android:layout_centerVertical="true"
		   		android:textSize="@dimen/wifi_list_item_main_font_size"
		   		android:textColor="@color/csl_wifi_list_main_font_color"
		   		android:text="@string/cam_setting_title_cam_info"/>
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/wifi_list_item_divider_color"/>
    </LinearLayout>
</ScrollView>
