<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:color="@color/beseye_color_highlight" /> <!-- pressed -->
    <item android:state_focused="true"
          android:color="@color/beseye_color_highlight" /> <!-- focused -->
    <item android:state_selected="true"
          android:color="@color/beseye_color_highlight" /> <!-- selected -->
    <item android:color="@color/beseye_color_normal" 
        android:state_enabled="false" /> <!-- disabled -->
    <item android:color="@color/beseye_color_normal" /> <!-- default -->
</selector>