<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:drawable="@color/beseye_color_highlight" /> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@color/beseye_color_highlight" /> <!-- focused -->
    <item android:state_selected="true"
          android:drawable="@color/beseye_color_normal" /> <!-- selected -->
    <item android:state_enabled="false"
          android:drawable="@color/word_gray_disabled" /> <!-- disabled -->
    <item android:drawable="@color/beseye_color_normal" /> <!-- default -->
</selector>