<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
   	android:layout_height="wrap_content"
   	android:orientation="vertical">
   	<RelativeLayout 
   	    android:layout_width="@dimen/wifi_ap_info_dialog_width"
   		android:layout_height="@dimen/wifi_ap_info_dialog_title_height" 
   	    android:background="@drawable/wifisetup_password_inf_bg_up">
   	    <TextView 
	   	    android:id="@+id/txt_cam_info_title"
	   	    android:layout_width="match_parent"
	   		android:layout_height="wrap_content" 
	   		android:paddingLeft="@dimen/wifi_list_item_horizontal_padding" 
	   		android:textColor="@color/wifi_info_dialog_title_font_color"
	   		android:textSize="@dimen/wifi_ap_info_dialog_title_font_size"
	   		android:text="@string/cam_setting_title_cam_info"
	   		android:layout_centerVertical="true"/>
   	</RelativeLayout>
	<LinearLayout 
   	    android:layout_width="@dimen/wifi_ap_info_dialog_width"
  		android:layout_height="wrap_content"
  		android:orientation="vertical"
  		android:gravity="center"
  		android:background="@drawable/wifisetup_password_inf_bg_mid">
   	    <RelativeLayout 
   	        android:id="@+id/vg_cam_name_holder"
	        android:layout_width="match_parent"
	   		android:layout_height="@dimen/wifi_ap_info_dialog_part_height"
	   		android:paddingLeft="@dimen/wifi_list_item_horizontal_padding" 
    		android:paddingRight="@dimen/wifi_list_item_horizontal_padding"
    		android:gravity="center|left">
	        <TextView 
		       	android:id="@+id/txt_cam_name_title"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:textSize="@dimen/caminfo_dialog_attr_main_font_size"
	   			android:textColor="@color/cam_info_dialog_attr_font_color"
		   		android:text="@string/cam_info_cam_name"/>
			<!--  
			<EditText 
		       	android:id="@+id/et_cam_name"
		    	android:layout_width="match_parent"
		   		android:layout_height="wrap_content" 
		   		android:paddingTop="4dp"
		   		android:paddingLeft="5dp"
		   		android:textSize="@dimen/caminfo_dialog_attr_value_font_size"
		   		android:textColor="@color/cam_info_dialog_sub_attr_font_color"
		   		android:layout_below="@+id/txt_cam_name_title"
		   		android:text="@string/cam_info_cam_name"
		   		android:singleLine="true"
		   		android:background="@android:color/transparent"/>
			<ImageView 
			    android:layout_width="match_parent"
		   		android:layout_height="wrap_content" 
		   		android:layout_below="@+id/txt_cam_name_title"
		   		android:layout_marginTop="25sp"
		   		android:background="@drawable/wifisetup_password_form"/>
			-->

			<EditText
			    android:id="@+id/et_cam_name"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/txt_cam_name_title"
			    android:background="@android:color/transparent"
			    android:inputType="none"
			    android:paddingTop="4dp"
			    android:singleLine="true"
			    android:text="@string/cam_info_cam_name"
			    android:textColor="@color/cam_info_dialog_sub_attr_font_color"
			    android:textSize="@dimen/caminfo_dialog_attr_value_font_size" />
			
	    </RelativeLayout>
	    <View 
	        android:layout_width="@dimen/wifi_ap_info_divider_width"
    		android:layout_height="1px"
    		android:background="@color/wifi_info_dialog_line_color"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	   		android:layout_height="@dimen/wifi_ap_info_dialog_part_height" 
	   		android:gravity="center|left">
			
	        <TextView 
		       	android:id="@+id/txt_sn"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:paddingLeft="@dimen/wifi_list_item_horizontal_padding" 
    			android:paddingRight="@dimen/wifi_list_item_horizontal_padding" 
		   		android:textSize="@dimen/caminfo_dialog_attr_main_font_size"
	   			android:textColor="@color/cam_info_dialog_attr_font_color"
		   		android:text="@string/cam_info_sn"/>
			<TextView 
		       	android:id="@+id/txt_sn_value"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:paddingTop="@dimen/wifi_list_item_vertical_padding"
		   		android:paddingLeft="@dimen/wifi_list_item_horizontal_padding" 
    			android:paddingRight="@dimen/wifi_list_item_horizontal_padding" 
		   		android:textSize="@dimen/caminfo_dialog_attr_value_font_size"
		   		android:textColor="@color/cam_info_dialog_sub_attr_font_color"
		   		android:layout_below="@+id/txt_sn"
		   		android:text="@string/dialog_wifi_ap_signal_Excellent"/>
	    </RelativeLayout>
	    <View 
	        android:layout_width="@dimen/wifi_ap_info_divider_width"
    		android:layout_height="1px"
    		android:background="@color/wifi_info_dialog_line_color"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	   		android:layout_height="@dimen/wifi_ap_info_dialog_part_height" 
	   		android:gravity="center|left">
	        <TextView 
		       	android:id="@+id/txt_mac"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:paddingLeft="@dimen/wifi_list_item_horizontal_padding" 
    			android:paddingRight="@dimen/wifi_list_item_horizontal_padding" 
		   		android:textSize="@dimen/caminfo_dialog_attr_main_font_size"
	   			android:textColor="@color/cam_info_dialog_attr_font_color"
		   		android:text="@string/cam_info_mac"/>
			<TextView 
		       	android:id="@+id/txt_mac_value"
		    	android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:paddingTop="@dimen/wifi_list_item_vertical_padding"
		   		android:paddingLeft="@dimen/wifi_list_item_horizontal_padding" 
    			android:paddingRight="@dimen/wifi_list_item_horizontal_padding" 
		   		android:textSize="@dimen/caminfo_dialog_attr_value_font_size"
		   		android:textColor="@color/cam_info_dialog_sub_attr_font_color"
		   		android:layout_below="@+id/txt_mac"
		   		android:text="@string/dialog_wifi_ap_signal_Excellent"/>
	    </RelativeLayout>
   	</LinearLayout> 
    <Button 
       	android:id="@+id/btn_ok"
    	android:layout_width="@dimen/wifi_ap_info_dialog_width"
   		android:layout_height="wrap_content"
   		android:background="@drawable/sl_dialog_single_btn_bg"
   		android:textSize="@dimen/wifi_ap_info_dialog_btn_font_size"
   		android:textColor="@color/cl_wifi_list_dialog_btn_font_color"
   		android:text="@string/ok"/>

</LinearLayout>