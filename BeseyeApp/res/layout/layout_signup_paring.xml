<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.app.beseye"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signup_bg_color">
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1" />
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/signup_paring_container" >
	    
	    <TextView
	        android:id="@+id/tv_Let_it_bee"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="@dimen/signup_paring_margin_small"
	        android:layout_marginLeft="@dimen/signup_firstPage_bottom_btn_marginSide"
	    	android:layout_marginRight="@dimen/signup_firstPage_bottom_btn_marginSide"
	    	android:gravity="center"
	        android:text="@string/signup_paring_title_1"
	        android:textColor="@color/word_gray"
	        android:textSize="@dimen/login_fontNormal" />
	    
	    <TextView
	        android:id="@+id/tv_please_hold_on"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/tv_Let_it_bee"
	        android:text="@string/signup_paring_title_2"
	        android:textColor="@color/word_gray" 
	        android:textSize="@dimen/login_fontNormal"/>
	    
	    <ImageView
	        android:id="@+id/iv_paring_cam_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="@dimen/signup_paring_margin_medium"
	        android:layout_below="@+id/tv_please_hold_on"
	        android:src="@drawable/signup_voice_beseyecam" />
	
	    <com.app.beseye.widget.GifMovieView
	        android:id="@+id/iv_paring_cam_sonar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="@dimen/signup_paring_margin_small"
	        android:layout_below="@+id/iv_paring_cam_icon" />
	    
	    <ImageView
	        android:id="@+id/iv_paring_bg"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/signup_voice_twopeople" />
	
	    <com.app.beseye.widget.GifMovieView
	        android:id="@+id/iv_paring_phone_sonar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_above="@+id/iv_paring_phone_icon"
	        android:layout_marginBottom="@dimen/signup_paring_margin_small" />
	    
	    <ImageView
	        android:id="@+id/iv_paring_phone_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_above="@+id/tv_percentage_label"
	        android:layout_marginBottom="@dimen/signup_paring_margin_medium"
	        android:src="@drawable/signup_voice_iphone" />
	
	
	    <TextView
	        android:id="@+id/tv_percentage_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/signup_paring_percentage"
	        android:layout_marginBottom="@dimen/signup_paring_margin_label_bottom"
	        android:textColor="@color/word_gray"
	        android:textSize="@dimen/login_fontNormal" />
	    
	    </RelativeLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1" />
	
	</LinearLayout>
	<include 
	    layout="@layout/layout_signup_paring_name_camera"
	    android:id="@+id/vg_name_cam"
	    android:visibility="gone">
	</include>		    
</RelativeLayout>
