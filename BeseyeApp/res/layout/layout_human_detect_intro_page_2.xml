<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/signup_bg_color">
	<RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="29">
	    <TextView
		    android:id="@+id/tv_enhance_human_detect_intro_p2_desc1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginLeft="@dimen/human_detect_train_marginSide"
		    android:layout_marginRight="@dimen/human_detect_train_marginSide"
		    android:layout_marginTop="@dimen/swipe_desc_margin_top"
		    android:text="@string/enhance_human_detect_intro_p2_desc"
		    android:textColor="@color/signup_font_description_color"
		    android:textSize="@dimen/login_fontNormal" />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="71">
	    <ImageView
	        android:id="@+id/iv_before_setup_top_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
	        android:src="@drawable/h_detection_swipe_02_image" />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:orientation="horizontal"
	        android:layout_below="@+id/iv_before_setup_top_img">
	        <ImageView 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/h_detection_highlighted_default" 
	        	android:layout_marginRight="@dimen/swipe_dot_horiz_margin"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/h_detection_highlighted_dot" 
	        	android:layout_marginRight="@dimen/swipe_dot_horiz_margin"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/h_detection_highlighted_default" />
	    </LinearLayout>
	</RelativeLayout> 
</LinearLayout>