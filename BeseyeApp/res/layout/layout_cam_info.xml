<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   	android:layout_height="wrap_content"
   	android:orientation="vertical">
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/setting_wifi_title_bg"> 
	    <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentLeft="true"
	   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
	   		android:layout_centerVertical="true"
	   		android:textSize="@dimen/setting_list_item_main_title_font_size"
	   		android:textColor="@color/cl_wifi_list_main_font_color"
	   		android:text="@string/cam_info_cam_name"/>
	</RelativeLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/cl_setting_item_bg">
	    
	    <ImageView 
	        android:id="@+id/iv_cam_name_line"
		    android:layout_width="match_parent"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignTop="@+id/txt_cam_name"
	   		android:layout_centerVertical="true"
	   		android:layout_marginTop="@dimen/caminfo_dialog_attr_value_font_size"
	   		android:background="@drawable/wifisetup_password_form"
	   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding" />
	    
 		<TextView 
	       	android:id="@+id/txt_cam_name"
	    	android:layout_width="match_parent"
	   		android:layout_height="wrap_content" 
	   		android:layout_centerVertical="true"
	   		android:layout_alignLeft="@+id/iv_cam_name_line"
	   		android:layout_alignRight="@+id/iv_cam_name_line"
	   		android:paddingLeft="@dimen/caminfo_cam_name_padding_hori"
	   		android:paddingRight="@dimen/caminfo_cam_name_padding_hori"
	   		android:textSize="@dimen/caminfo_dialog_attr_value_font_size"
	   		android:textColor="@color/wifi_info_dialog_attr_font_color"
	   		android:singleLine="true"
			android:background="@android:color/transparent"/>
	</RelativeLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/setting_wifi_title_bg"> 
	    <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentLeft="true"
	   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
	   		android:layout_centerVertical="true"
	   		android:textSize="@dimen/setting_list_item_main_title_font_size"
	   		android:textColor="@color/cl_wifi_list_main_font_color"
	   		android:text="@string/cam_info_sw_ver"/>
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/vg_sw_ver" 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/cl_setting_item_bg">
		<TextView
		    android:id="@+id/txt_sw_ver" 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentLeft="true"
   			android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:layout_centerVertical="true"
	   		android:textSize="@dimen/wifi_list_item_main_font_size"
	   		android:textColor="@color/cl_wifi_list_main_font_color"/>
	</RelativeLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/setting_wifi_title_bg"> 
	    <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentLeft="true"
	   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
	   		android:layout_centerVertical="true"
	   		android:textSize="@dimen/setting_list_item_main_title_font_size"
	   		android:textColor="@color/cl_wifi_list_main_font_color"
	   		android:text="@string/cam_info_sn"/>
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/vg_sn" 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/cl_setting_item_bg">
		<TextView
		    android:id="@+id/txt_sn" 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentLeft="true"
   			android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:layout_centerVertical="true"
	   		android:textSize="@dimen/wifi_list_item_main_font_size"
	   		android:textColor="@color/cl_wifi_list_main_font_color"/>
	</RelativeLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/setting_wifi_title_bg"> 
	    <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentLeft="true"
	   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
	   		android:layout_centerVertical="true"
	   		android:textSize="@dimen/setting_list_item_main_title_font_size"
	   		android:textColor="@color/cl_wifi_list_main_font_color"
	   		android:text="@string/cam_info_mac"/>
	</RelativeLayout>
		
	<RelativeLayout
	    android:id="@+id/vg_mac_addr" 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/wifi_list_item_height"
	    android:background="@drawable/cl_setting_item_bg">
		<TextView
		    android:id="@+id/txt_mac_addr" 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentLeft="true"
   			android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:layout_centerVertical="true"
	   		android:textSize="@dimen/wifi_list_item_main_font_size"
	   		android:textColor="@color/cl_wifi_list_main_font_color"/>
	</RelativeLayout>
</LinearLayout>



   
		
	
 


