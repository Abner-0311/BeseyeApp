			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true">
			</com.app.beseye.widget.BeseyeSwitchBtn>
	    
		</RelativeLayout>
		
