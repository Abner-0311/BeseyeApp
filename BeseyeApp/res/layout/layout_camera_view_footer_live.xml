<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  	android:orientation="vertical">
  	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="40dp"
	  	android:orientation="horizontal">
	  	<View 
	        android:layout_width="0dp"
	   		android:layout_height="1dp" 
	   		android:layout_weight="1"/>
	  	<ImageButton 
	       	android:id="@+id/ib_play_pause"
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_gravity="center"
	   		android:padding="10dp"
	   		android:src="@drawable/sl_liveview_play_btn_round"
	   		android:background="@android:color/transparent"/> 	    
	    <View 
	        android:layout_width="0dp"
	   		android:layout_height="1dp" 
	   		android:layout_weight="1"/>
	    <View 
	        android:layout_width="0dp"
	   		android:layout_height="1dp" 
	   		android:layout_weight="1"/>
	    <ImageButton 
	       	android:id="@+id/ib_talk"
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_gravity="center"
	   		android:padding="10dp"
	   		android:src="@drawable/sl_liveview_talk_btn_round"
	   		android:background="@android:color/transparent"/>
	    <View 
	       	android:layout_width="0dp"
	   		android:layout_height="1dp" 
	   		android:layout_weight="1"/>
  	</LinearLayout>
  	<View 
  	    android:layout_width="match_parent"
	    android:layout_height="0.25dp"
	    android:background="@color/beseye_color_gray"/>
  	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	  	android:orientation="horizontal">
  	    <TextView 
	       	android:id="@+id/txt_events"
	    	android:layout_width="0dp"
	   		android:layout_height="@dimen/liveview_footer_height_portrait" 
	   		android:layout_weight="1"
	   		android:layout_gravity="center"
	   		android:gravity="center"
	   		android:textSize="@dimen/liveview_navbar_font_size"
	   		android:textColor="@color/cl_reverse_font_color"
	   		android:text="@string/event_cam_view"
	   		android:background="@drawable/sl_liveview_event_btn_bg"/>
	    <TextView 
	       	android:id="@+id/txt_go_live"
	    	android:layout_width="0dp"
	   		android:layout_height="@dimen/liveview_footer_height_portrait" 
	   		android:layout_weight="1"
	   		android:text="@string/event_go_live"
	   		android:layout_gravity="center"
	   		android:gravity="center"
	   		android:textSize="@dimen/liveview_navbar_font_size"
	   		android:textColor="@color/cl_normal_font_color"
	   		android:background="@drawable/sl_liveview_live_btn_bg"/>
  	</LinearLayout>
</LinearLayout>
