<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:tools="http://schemas.android.com/tools"
 	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
   	<RelativeLayout 
   	    android:id="@+id/vg_nv_holder_auto"
   	    android:layout_width="match_parent"
   	    android:layout_height="@dimen/wifi_list_item_height"
   		android:background="@drawable/dsl_setting_item_bg" >
   		<TextView 
   		    android:id="@+id/txt_key_autio"
   		    android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:textSize="@dimen/wifi_ap_keyindex_dialog_attr_font_size"
   			android:textColor="@color/wifi_info_dialog_btn_font_color"
   			android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:text="@string/cam_setting_hw_night_vision_auto"
   			android:duplicateParentState="true"/>
   		
   		<ImageView 
   		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:layout_alignParentRight="true"
   			android:src="@drawable/setting_radio_box_default"
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
   			android:duplicateParentState="true"/>
   		
   		<ImageView 
   		    android:id="@+id/iv_key_auto_check"
   		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:layout_alignParentRight="true"
   			android:src="@drawable/setting_radio_box_highlight"
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
   			android:duplicateParentState="true"/>
   	    
   	</RelativeLayout>
   	<RelativeLayout 
   	    android:id="@+id/vg_nv_holder_on"
   	    android:layout_width="wrap_content"
   	    android:layout_height="@dimen/wifi_list_item_height"
   		android:background="@drawable/dsl_setting_item_bg">
   		<TextView 
   		    android:id="@+id/txt_key_on"
   		    android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:textSize="@dimen/wifi_ap_keyindex_dialog_attr_font_size"
   			android:textColor="@color/wifi_info_dialog_btn_font_color"
   			android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:text="@string/cam_setting_hw_night_vision_on"
   			android:duplicateParentState="true"/>
   		
   		<ImageView 
   		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:layout_alignParentRight="true"
   			android:src="@drawable/setting_radio_box_default"
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
   			android:duplicateParentState="true"/>
   		
   		<ImageView 
   		    android:id="@+id/iv_key_on_check"
   		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:layout_alignParentRight="true"
   			android:src="@drawable/setting_radio_box_highlight"
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
   			android:duplicateParentState="true"/>

   	</RelativeLayout>
   	<RelativeLayout 
   	    android:id="@+id/vg_nv_holder_off"
   	    android:layout_width="wrap_content"
   	    android:layout_height="@dimen/wifi_list_item_height"
   		android:background="@drawable/dsl_setting_item_bg">
   		<TextView 
   		    android:id="@+id/txt_key_off"
   		    android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:textSize="@dimen/wifi_ap_keyindex_dialog_attr_font_size"
   			android:textColor="@color/wifi_info_dialog_btn_font_color"
   			android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:text="@string/cam_setting_hw_night_vision_off"
   			android:duplicateParentState="true"/>
   		<ImageView 
   		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:layout_alignParentRight="true"
   			android:src="@drawable/setting_radio_box_default"
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
   			android:duplicateParentState="true"/>
   		<ImageView 
   		    android:id="@+id/iv_key_off_check"
   		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_centerVertical="true"
   			android:layout_alignParentRight="true"
   			android:src="@drawable/setting_radio_box_highlight"
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding"
   			android:duplicateParentState="true"/>
   	    
   	</RelativeLayout>
</LinearLayout>