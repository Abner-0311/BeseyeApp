<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="horizontal">
    <ImageView
		android:id="@+id/img_share_app_icon"
		android:layout_width="@dimen/share_itm_width_height"
		android:layout_height="@dimen/share_itm_width_height"
		android:layout_marginRight="@dimen/listview_item_padding_landscape"
		android:layout_marginLeft="@dimen/listview_item_padding_landscape"
		android:layout_gravity="center"
    />

	<TextView 
  	    android:id="@+id/txt_share_app_name"
  	    android:layout_width="wrap_content"
    	android:layout_height="@dimen/wifi_list_item_height"
    	android:textSize="@dimen/wifi_list_item_main_font_size"
		android:textColor="@color/csl_wifi_list_main_font_color"
    	android:gravity="center"
    />

</LinearLayout>
