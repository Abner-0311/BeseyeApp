<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   	<RelativeLayout 
   	    android:layout_width="match_parent"
   		android:layout_height="@dimen/wifi_ap_info_dialog_title_height"
   	    android:background="@drawable/wifisetup_password_inf_bg_up">
   	    <TextView 
	   	    android:id="@+id/txt_dialog_title"
	   	    android:layout_width="match_parent"
	   		android:layout_height="wrap_content" 
	   		android:paddingLeft="@dimen/wifi_list_item_horizontal_padding"
	   		android:textColor="@color/wifi_info_dialog_title_font_color"
	   		android:textSize="@dimen/wifi_ap_info_dialog_title_font_size"
	   		android:layout_centerVertical="true"/>
   	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/wifisetup_password_inf_bg_mid">
   	   	<TextView 
   	   	    android:id="@+id/txt_dialog_body"
	   	    android:layout_width="match_parent"
	   		android:layout_height="wrap_content" 
	   		android:layout_gravity="center"
	   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
   			android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding" 
   			android:layout_marginTop="@dimen/dialog_vertical_padding" 
   			android:layout_marginBottom="@dimen/dialog_vertical_padding" 
	   		android:textSize="@dimen/wifi_ap_info_dialog_btn_font_size"
	   		android:textColor="@color/wifi_info_dialog_attr_font_color"/>
	</LinearLayout>
   	<LinearLayout 
        android:id="@+id/vg_button_holder"
        android:layout_width="match_parent"
   		android:layout_height="@dimen/wifi_ap_info_dialog_btn_height"
   		android:background="@drawable/wifisetup_password_inf_bg_diwn"
   		android:orientation="horizontal">
        <Button 
	       	android:id="@+id/btn_yes"
	   		android:layout_height="wrap_content"
	   		android:layout_width="match_parent"
	   		android:background="@drawable/sl_dialog_single_btn_bg"
	   		android:textSize="@dimen/wifi_ap_info_dialog_btn_font_size"
	   		android:textColor="@color/csl_wifi_list_dialog_btn_font_color"
	   		android:text="@string/ok"/>
    </LinearLayout>

</LinearLayout>