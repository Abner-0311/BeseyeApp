<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content">
   	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/cl_setting_item_bg">
		
		    <View 
		        android:layout_width="1dp"
		    	android:layout_height="@dimen/wifi_list_item_height"/>

		    <com.app.beseye.widget.BeseyeSwitchBtn 
			    android:id="@+id/sb_notify_me_switch"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:layout_marginRight="@dimen/wifi_list_item_horizontal_padding">
			</com.app.beseye.widget.BeseyeSwitchBtn>
		    
		    <RelativeLayout 
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:layout_alignParentLeft="true"
		   		android:layout_marginLeft="@dimen/wifi_list_item_horizontal_padding" 
		   		android:layout_centerVertical="true">
		        <TextView 
			       	android:id="@+id/txt_notify_me_title"
			    	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content" 
			   		android:textSize="@dimen/wifi_list_item_main_font_size"
			   		android:textColor="@color/cl_wifi_list_main_font_color"
			   		android:text="@string/cam_setting_title_notification_event_notify_me"/>
		    </RelativeLayout>   
		</RelativeLayout>
		
		<include 
		    android:id="@+id/vg_motion_detect"
		    layout="@layout/layout_power_schdule_select_days_itm"></include>
		<include 
		    android:id="@+id/vg_fire_detect"
		    layout="@layout/layout_power_schdule_select_days_itm"></include>
		<include 
		    android:id="@+id/vg_sound_detect"
		    layout="@layout/layout_power_schdule_select_days_itm"></include>
		<include 
		    android:id="@+id/vg_offline_detect"
		    layout="@layout/layout_power_schdule_select_days_itm"></include>
    </LinearLayout>
</ScrollView>
