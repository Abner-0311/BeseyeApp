<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

	<com.app.beseye.TouchSurfaceView 
	    android:id="@+id/surface_streaming_view"
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_centerVertical="true"/>

	<ProgressBar
	    android:id="@+id/pb_loadingCursor"
	    style="?android:attr/progressBarStyleLarge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true" 
	    android:indeterminate="true"
    	android:indeterminateDrawable="@drawable/progress"/>

	<RelativeLayout
	    android:id="@+id/vg_cam_power_state"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:visibility="gone" >

	    <TextView 
		    android:id="@+id/txt_cam_power_state"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/liveview_power_state_font_color"
		    android:textSize="@dimen/liveview_power_state_font_size"
		    android:text="@string/can_power_state_off"
		    android:layout_centerHorizontal="true"/>
	    
	    <ImageButton 
	        android:id="@+id/ib_open_cam"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="12dp"
		    android:layout_below="@+id/txt_cam_power_state"
		    android:src="@drawable/sl_liveview_open_cam_btn"
		    android:background="@android:color/transparent"/>

	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/vg_cam_invald_statement"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#11ffffff"
	    android:gravity="center"
	    android:visibility="visible" >

	    <TextView 
		    android:id="@+id/txt_cam_invalid_state"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/liveview_power_state_font_color"
		    android:textSize="@dimen/liveview_power_state_font_size"
		    android:text="@string/can_power_state_disconnect"
		    android:layout_centerHorizontal="true"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/vg_streaming_view_header"
	    android:layout_width="match_parent"
    	android:layout_height="@dimen/liveview_navbar_height_landscape"
    	android:background="@drawable/liveview_h_navbar_bg">
    	
	    <ImageView 
	       	android:id="@+id/iv_streaming_type"
	       	android:layout_marginLeft="20dp"
	       	android:layout_marginTop="2dp"
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:src="@drawable/liveview_h_display_icon"/>
	    
	    <ImageButton 
	       	android:id="@+id/ib_settings"
	       	android:layout_marginRight="20dp"
	       	android:layout_marginTop="2dp"
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_alignParentRight="true"
    		android:src="@drawable/sl_liveview_settings_btn"
    		android:background="@android:color/transparent"/>
	    
	    <TextView 
	       	android:id="@+id/txt_cam_name"
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerHorizontal="true"
    		android:layout_marginTop="4dp"
    		android:textSize="@dimen/liveview_navbar_font_size_large"
    		android:textColor="@color/liveview_font_normal_color"
    		android:text="@string/cam_info_cam_name"/>
	    
	  	<ImageView
	  	    android:id="@+id/iv_time_divider"
	  	    android:layout_width="1dp"
	  	    android:layout_height="@dimen/liveview_navbar_font_size"
	  	    android:layout_below="@+id/txt_cam_name"
	  	    android:layout_centerHorizontal="true"
	  	    android:layout_marginTop="6dp"
	  	    android:src="@color/beseye_color_gray" />
	    
	    <TextView 
	       	android:id="@+id/txt_streaming_date"
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginRight="16dp" 
    		android:layout_toLeftOf="@+id/iv_time_divider"
    		android:layout_below="@+id/txt_cam_name"
    		android:layout_marginTop="2dp"
    		android:layout_alignBaseline="@+id/iv_time_divider"
    		android:textSize="@dimen/liveview_navbar_font_size"
    		android:textColor="@color/liveview_font_normal_color"
    		android:text="@string/camerview_init_date"/>
	    	    
	    <TextView 
	       	android:id="@+id/txt_streaming_time"
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_marginLeft="16dp" 
    		android:layout_toRightOf="@+id/iv_time_divider"
    		android:layout_toLeftOf="@+id/ib_settings"
    		android:layout_below="@+id/txt_cam_name"
    		android:layout_marginTop="2dp"
    		android:layout_alignBaseline="@+id/iv_time_divider"
    		android:textSize="@dimen/liveview_navbar_font_size"
    		android:textColor="@color/liveview_font_normal_color"
    		android:text="@string/camerview_init_time"/>
	    
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/vg_streaming_view_footer"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/liveview_toolbar_height_portrait"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/liveview_h_toolbar_bg" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/liveview_footer_height_portrait" >

	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />

		    <ImageButton 
		       	android:id="@+id/ib_talk"
		    	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:layout_gravity="center"
	    		android:src="@drawable/sl_liveview_talk_btn"
	    		android:background="@android:color/transparent"/>
		    <View 
	           	android:layout_width="0dp"
	    		android:layout_height="1dp" 
	    		android:layout_weight="1"/>
		    <ImageButton 
		       	android:id="@+id/ib_rewind"
		    	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:layout_gravity="center"
	    		android:src="@drawable/sl_liveview_rewind_btn"
	    		android:background="@android:color/transparent"/>
		    <View 
	           	android:layout_width="0dp"
	    		android:layout_height="1dp" 
	    		android:layout_weight="1"/>
		    <ImageButton 
		       	android:id="@+id/ib_play_pause"
		    	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:layout_gravity="center"
	    		android:src="@drawable/sl_liveview_play_btn"
	    		android:background="@android:color/transparent"/>
		    <View 
	           	android:layout_width="0dp"
	    		android:layout_height="1dp" 
	    		android:layout_weight="1"/>
		    <ImageButton 
		       	android:id="@+id/ib_fast_forward"
		    	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_marginRight="40dp" 
	    		android:layout_gravity="center" 
	    		android:src="@drawable/sl_liveview_fast_forward_btn"
	    		android:background="@android:color/transparent"/>
		    
		    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/liveview_footer_height_portrait"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="false"
	        android:layout_alignParentTop="false" >
		    
	        <ImageView
	            android:id="@+id/ImageView02"
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:src="@color/beseye_color_gray" />
	        
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/liveview_footer_height_portrait"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="false"
	        android:layout_alignParentTop="false" >

	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />

	        <TextView
	            android:id="@+id/TextView02"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="@string/event_cam_view"
	            android:textColor="@color/cl_normal_font_color"
	            android:textSize="@dimen/liveview_navbar_font_size" />

	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />

	        <ImageView
	            android:id="@+id/ImageView01"
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:layout_gravity="center"
	            android:src="@color/beseye_color_gray" />

	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />

	        <TextView
	            android:id="@+id/TextView01"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="@string/event_go_live"
	            android:textColor="@color/cl_normal_font_color"
	            android:textSize="@dimen/liveview_navbar_font_size" />
	        
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
	        
	    </LinearLayout>
	    
	</RelativeLayout>
</RelativeLayout>