<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >
    <View
        android:id="@+id/vw_margin_left"
	    android:layout_width="@dimen/wifi_list_item_horizontal_padding"
    	android:layout_height="wrap_content"/>
    	
    <TextView
        android:id="@+id/txt_wifi_title"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/title_wifi"
    	android:textColor="@color/wifi_list_title_color"
    	android:textSize="@dimen/liveview_navbar_font_size_large"
    	android:layout_toRightOf="@+id/vw_margin_left"
    	android:layout_centerVertical="true">
    </TextView>
    	
    <View
	    android:id="@+id/vw_margin_right"
	    android:layout_width="@dimen/wifi_list_item_horizontal_padding"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"/>
    	
	<com.app.beseye.widget.BeseyeSwitchBtn 
	    android:id="@+id/sb_wifi_btn"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@+id/vw_margin_right"
    	android:layout_centerVertical="true">
	</com.app.beseye.widget.BeseyeSwitchBtn>
	
</RelativeLayout>