<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signup_bg_color" >

	<ScrollView 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content">
	    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <RelativeLayout 
		        android:id="@+id/img_about_logo_holder"
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:layout_centerHorizontal="true"
		   		android:layout_marginTop="@dimen/about_logo_margin_top">
		        
		        <ImageView 
				    android:id="@+id/img_about_logo"
			        android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:src="@drawable/about_logo"/>
		        
		        <ImageView 
				    android:id="@+id/img_about_logo_type"
			        android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:src="@drawable/about_logotype"
			   		android:layout_toRightOf="@+id/img_about_logo"/>
			
				<TextView 
				    android:id="@+id/txt_app_ver"
				    android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:textColor="#00bbb3"
			   		android:textSize="@dimen/about_ver_font_size"
			   		android:text="@string/about_ver"
			   		android:layout_below="@+id/img_about_logo"
			   		android:layout_marginTop="@dimen/about_ver_margin_top"
			   		android:layout_alignLeft="@+id/img_about_logo_type"/>
		    </RelativeLayout>
		    <TextView 
			    android:id="@+id/txt_about_desc"
			    android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:textSize="@dimen/about_ver_font_size"
		   		android:text="@string/about_desc"
		   		android:layout_below="@+id/img_about_logo_holder"
		   		android:layout_marginTop="@dimen/about_desc_margin_top"
		   		android:layout_marginLeft="@dimen/about_desc_margin_hor"
		   		android:layout_marginRight="@dimen/about_desc_margin_hor"/>
		    
		    <TextView 
			    android:id="@+id/txt_app_link"
			    android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:textColor="#00bbb3"
		   		android:textSize="@dimen/about_ver_font_size"
		   		android:text="@string/about_link"
		   		android:layout_below="@+id/txt_about_desc"
		   		android:layout_alignLeft="@+id/txt_about_desc"
		   		android:layout_marginTop="@dimen/about_link_margin_top"/>
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>